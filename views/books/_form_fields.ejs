<div>
    <label for="">Title</label>
    <input type="text" name="name" value="<%= book.name %>">
</div>

<div>
    <label for="">Author</label>
    <select name="author">
        <% authors.forEach(author=> { %>
            <% if (author.id===book.author) {%>
                <option selected label="<%= author.name %> " value="<%= author.id %> "></option>
                <%} else { %>
                    <option label="<%= author.name %> " value="<%= author.id %> "></option>
                    <% } %>
                        <% }) %>
    </select>
</div>
<div>
    <label for="">Publish Date</label>
    <input type="date" name="publishDate" id="publishDate"
        value="<%= book.publishDate == null ? "" : book.publishDate.toISOString().split('T') %>">
</div>
<div>
    <label for="">Page Count</label>
    <input type="number" name="pageCount" min="1" id="pageCount" value="<%= book.pageCount %>">
</div>
<div>
    <label for="">Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label for="">Description</label>
    <textarea type="file" name="cover"><%= book.description %> </textarea>
</div>